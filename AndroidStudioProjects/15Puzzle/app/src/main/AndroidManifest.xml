<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.oriel.a15puzzle">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon15puzzle"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NavigateActivity"/>

        <activity android:name=".Game3x3Activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".Game4x4Activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".Game5x5Activity"
            android:screenOrientation="portrait"/>

        <activity android:name=".PuzzleImageGame3x3"
            android:screenOrientation="portrait"/>
        <activity android:name=".PuzzleImageGame4x4"
            android:screenOrientation="portrait"/>
        <activity android:name=".PuzzleImageGame5x5"
            android:screenOrientation="portrait"/>

        <activity android:name=".EasyModeHighScores"/>
        <activity android:name=".MediumModeHighScores"/>
        <activity android:name=".HardModeHighScores"/>

    </application>

</manifest>