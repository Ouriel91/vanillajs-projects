<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_margin="10dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square0_4x4"
                    android:text="1"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_red_background" />

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square1_4x4"
                    android:text="2"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_red_background" />

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square2_4x4"
                    android:text="3"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_red_background" />

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square3_4x4"
                    android:text="4"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_red_background" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square4_4x4"
                    android:text="5"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_red_background" />

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square5_4x4"
                    android:text="6"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_blue_background"/>

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square6_4x4"
                    android:text="7"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_blue_background"/>

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square7_4x4"
                    android:text="8"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_blue_background"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square8_4x4"
                    android:text="9"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_red_background" />

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square9_4x4"
                    android:text="10"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_blue_background"/>

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square10_4x4"
                    android:text="11"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_green_background"/>

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square11_4x4"
                    android:text="12"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_green_background"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square12_4x4"
                    android:text="13"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_red_background" />

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square13_4x4"
                    android:text="14"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_blue_background"/>

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square14_4x4"
                    android:text="15"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "@drawable/cube_green_background"/>

                <com.example.oriel.a15puzzle.Cube4x4
                    android:id="@+id/square15_4x4"
                    android:text="0"
                    android:textColor="@color/number_color"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_margin="1dp"
                    android:background=
                        "#00000000"/>

            </TableRow>

        </TableLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/moves_4x4_tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/moves"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_autorenew_black_24dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/shuffle_cube_shape"
                    android:gravity="center"
                    android:id="@+id/shuffle_btn_4x4"/>

            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/finish_btn_4x4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/finish_button_shape"
            android:text="@string/finish_game" />

    </LinearLayout>


</LinearLayout>